{
  "name": "kagohill-cms",
  "version": "1.0.0",
  "private": true,
  "description": "Kago Hills: Next.js + Sanity CMS Monorepo",
  "workspaces": [
    "studio",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n \"frontend,studio\" -c \"cyan,magenta\" \"yarn dev:frontend\" \"yarn dev:studio\"",
    "dev:frontend": "yarn workspace frontend dev",
    "dev:studio": "yarn workspace studio dev",
    "build": "yarn workspaces run build",
    "build:frontend": "yarn workspace frontend build",
    "build:studio": "yarn workspace studio build",
    "lint": "yarn workspace frontend lint",
    "type-check": "yarn workspaces run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
